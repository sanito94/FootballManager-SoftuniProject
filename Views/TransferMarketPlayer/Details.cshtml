@model TransferMarketPlayerDetailsViewModel
@{
    ViewBag.Title = "Player Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="card w-100">
        <div class="card-body">
            <h3 class="card-title text-center">Name: @Model.Name</h3>
            <p class="mb-0"><span class="fw-bold">Age: </span>@Model.Age</p>
            <p class="mb-0"><span class="fw-bold">Country: </span>@Model.Country</p>
            <p class="mb-0"><span class="fw-bold">Position: </span>@Model.Position</p>
            <p class="mb-0"><span class="fw-bold">Price: </span>@Model.Price</p>
            <p class="mb-0"><span class="fw-bold">Manager Name: </span>@Model.ManagerName</p>
        </div>

        <a asp-controller="TransferMarketPlayer" asp-action="AllSearch" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to Market</a>
        

    </div>
</div>
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
