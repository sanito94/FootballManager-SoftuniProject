@model TransferMarketPlayerViewModel
@{
    ViewBag.Title = "Announce Seminar";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddPlayer" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Player Name:</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Age" class="form-label-add-edit">Player Age:</label>
                <input asp-for="@Model.Age" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Country" class="form-label-add-edit">Player Country:</label>
                <input asp-for="@Model.Country" class="form-control" aria-required="true" rows="5">
                <span asp-validation-for="@Model.Country" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Position" class="form-label-add-edit">Player Position:</label>
                <input asp-for="@Model.Position" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Position" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label-add-edit">Player Price:</label>
                <input asp-for="@Model.Price" class="form-control"/>
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}

